MainActivity:

package com.example.wybierzkolor;

import android.content.Intent;
import android.graphics.Color;
import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;

import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    private static final int KOD_KOLORU = 1;
    TextView textKolor;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        textKolor = findViewById(R.id.textKolor);
        Button btn = findViewById(R.id.btnWybierz);

        btn.setOnClickListener(v ->
                startActivityForResult(
                        new Intent(this, WybierzKolorActivity.class),
                        KOD_KOLORU
                ));
    }

    @Override
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        super.onActivityResult(requestCode, resultCode, data);

        if (requestCode == KOD_KOLORU && resultCode == RESULT_OK) {
            String kolor = data.getStringExtra("kolor");
            textKolor.setBackgroundColor(Color.parseColor(kolor));
        }
    }
}


activity_main.xml:

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textKolor"
        android:text="TÅ‚o"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnWybierz"
        android:text="Wybierz kolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>


WybierzKolorActivity:

package com.example.wybierzkolor;

import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;

import androidx.appcompat.app.AppCompatActivity;

public class WybierzKolorActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_wybierz_kolor);

        findViewById(R.id.btnCzerwony).setOnClickListener(v -> zwroc("#FF0000"));
        findViewById(R.id.btnZielony).setOnClickListener(v -> zwroc("#00FF00"));
        findViewById(R.id.btnNiebieski).setOnClickListener(v -> zwroc("#0000FF"));
    }

    void zwroc(String kolor) {
        Intent i = new Intent();
        i.putExtra("kolor", kolor);
        setResult(RESULT_OK, i);
        finish();
    }
}


activity_wybierz_kolor.xml:

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCzerwony"
        android:text="Czerwony"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnZielony"
        android:text="Zielony"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnNiebieski"
        android:text="Niebieski"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
