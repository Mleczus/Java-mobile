    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj swój wiek:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/poleWprowadzaniaWieku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="np. 18"
        android:inputType="number"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weryfikuj"
        android:layout_marginTop="16dp"
        android:id="@+id/weryfikujwiekLambda"/>

    <TextView
        android:id="@+id/tekstWynikowy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="24dp"/>

</LinearLayout>


//java

package com.example.checkage;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);

        Button weryfikujwiekLambda = findViewById(R.id.weryfikujwiekLambda);

        weryfikujwiekLambda.setOnClickListener(v ->{
            weryfikujWiek(v);
        });
    }

    public void weryfikujWiek(View view) {
        // KROK 1: Uzyskanie referencji do obiektów widoków
        EditText poleWiek = findViewById(R.id.poleWprowadzaniaWieku);
        TextView tekstWynik = findViewById(R.id.tekstWynikowy);

        // KROK 2: Pobranie i konwersja danych wejściowych
        String wiekJakoTekst = poleWiek.getText().toString();
        int wiek = Integer.parseInt(wiekJakoTekst); // Parsowanie obiektu String na typ prymitywny int

        // KROK 3: Implementacja logiki decyzyjnej
        if (wiek >= 18) {
            // Blok wykonawczy dla warunku prawdziwego
            tekstWynik.setText("Użytkownik jest osobą pełnoletnią.");

        } else {
            // Blok wykonawczy dla warunku fałszywego
            tekstWynik.setText("Użytkownik nie jest osobą pełnoletnią.");

        }
    }
}
