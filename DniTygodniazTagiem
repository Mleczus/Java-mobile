//java

package com.example.dnitygodnia;

import android.os.Bundle;
import android.view.View;
import android.widget.EditText;
import android.widget.Toast;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });
    }
    public void Sprawdz(View view){
        EditText dzien = findViewById(R.id.dzien);
        String tekst = dzien.getText().toString();
        dzien.setTag(tekst);
        String dzienTag = (String) dzien.getTag();


//        switch (dzienTag){
//            case "1":
//                Toast.makeText(this, "PONIEDZIAŁEK", Toast.LENGTH_SHORT).show();
//                break;
//            case "2":
//                Toast.makeText(this, "WTOREK", Toast.LENGTH_SHORT).show();
//                break;
//            case "3":
//                Toast.makeText(this, "ŚRODA", Toast.LENGTH_SHORT).show();
//                break;
//            case "4":
//                Toast.makeText(this, "CZWARTEK", Toast.LENGTH_SHORT).show();
//                break;
//            case "5":
//                Toast.makeText(this, "PIĄTEK", Toast.LENGTH_SHORT).show();
//                break;
//            case "6":
//                Toast.makeText(this, "SOBOTA", Toast.LENGTH_SHORT).show();
//                break;
//            case "7":
//                Toast.makeText(this, "NIEDZIELA", Toast.LENGTH_SHORT).show();
//                break;
//            default:
//                Toast.makeText(this, "TYLKO LICZBY Z ZAKRESU 1-7", Toast.LENGTH_SHORT).show();
//        }

        switch (dzienTag) {
            case "1":
            case "2":
            case "3":
            case "4":
            case "5":
                Toast.makeText(this, "DZIEŃ ROBOCZY!", Toast.LENGTH_SHORT).show();
                break;
            case "6":
            case "7":
                Toast.makeText(this, "WEEKEND!", Toast.LENGTH_SHORT).show();
                break;
            default:
                Toast.makeText(this, "TYLKO LICZBY Z ZAKRESU 1-7", Toast.LENGTH_SHORT).show();
        }
    }
}

//ZAD 4: Bo brak break powoduje fallthrough czyli po
// wykonaniu case 1 kod przechodzi od razu do case 2,
// potem case 3, aż znajdzie jakikolwiek kolejny break
// lub koniec switch.
//WYPISZE: "PONIEDZIAŁEK,WTOREK,ŚRODA"
