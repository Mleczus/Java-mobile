            android:tag="bez_sosu"
            android:checked="true"
            android:onClick="aktualizujCene" />
    </RadioGroup>

    <TextView
        android:id="@+id/tekstCenaKoncowa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
