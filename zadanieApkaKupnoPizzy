            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sos czosnkowy (+2 PLN)"
            android:tag="czosnkowy"
            android:onClick="aktualizujCene" />

        <RadioButton
            android:id="@+id/radioPomidorowy"
