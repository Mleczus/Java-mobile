    <!-- Tytu≈Ç -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfigurator Pizzy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Rozmiar pizzy -->
    <TextView
        android:layout_width="wrap_content"
